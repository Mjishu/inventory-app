extends layout

block content

    h1 #{title}

    if category_items.length
        p #[strong Delete the following items before trying to delete the Category]
        div(style="margin-left:20px;margin-top:20px;")
            h4 Items
            dl
                each item in category_items
                    dt
                        a(href=item.url) #{item.name}
                    dd #{item.desc}

    p Do you really want to delete this item?

    form(method="POST")
        div.form-group
            input#categoryid.form-control(type="hidden", name="categoryid", value=category._id)

        button.btn.btn-primary(type="submit") Delete