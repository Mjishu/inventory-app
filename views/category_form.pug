extends layout

block content
    h1=title

    form(method="POST")
        label(for="name") Name:
        input#name.form-control(type="text", placeholder="name...", name='name', required value=(undefined === category?"": category.name))
        label(for="desc") Description:
        input#desc.form-control(type='text' placeholder="..." name="desc" required value=(undefined === category ? "" : category.desc))

        button.btn.btn-primary(type="submit") Submit

    if errors 
        ul
            for error in errors
                li != error.msg 