extends layout

block content
    h1 Title: #{item.name}

    p #[strong Category:]
        each categoryItem in item.category
            a(href=categoryItem.url) #{categoryItem.name} 
    
    p #[strong Description: ] #{item.desc}

    p #[strong Number InStock: ] #{item.numInstock}
    p #[strong Price: ] $#{item.price}

    p SKU: #{item.sku}