extends layout 

block content

    h1 #{title}

    form(method="POST")
        div.form-group
            label(for='name') Item: 
            input#name.form-control(type="text", placeholder="new item..." name="name" required value=(undefined===item ? "":item.name))
            label(for="desc") Description: 
            input#desc.form-control(type="text", placeholder="new description...", name="desc", required value=(undefined===item ? "":item.desc))
            label(for="stock") Stock: 
            input#stock.form-control(type="number", required, placeholder="1.2.3.." name="stock", value=(undefined===item ? "":item.stock))
            label(for="price") Price $:
            input#price.form-control(type="number", step="0.01", required, placeholder="5.00..." , value=(undefined===item ? "":item.price))
            div.form-group
            label Categories: 
                div
                        -//(console.log("type:"+typeof categorys))
                        for category in categorys
                            div(style="display:inline;padding-right:10px")
                            -(console.log("im logging this:" + category + "type is" + typeof category))

                                if category.checked 
                                    input.checkbox-input(type="checkbox",name="category",id=category._id, value=category._id, checked) 
                                else
                                    input.checkbox-input(type='checkbox', name='category', id=category._id, value=category._id) 
                                label(for=category._id) &nbsp;#{category.name} 
                    

        button.btn.btn-primary(type="submit") Submit

    if errors
        ul
        for err in errors 
            li != err.msg